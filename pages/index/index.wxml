<!--index.wxml-->
<view class="container">
  <van-search
    class="bx"
    value="{{ value }}"
    placeholder="请输入搜索内容"
    use-action-slot
    background="rgb(79, 192, 141)"
    bind:change="onChange"
    bind:search="onSearch"
  >
    <van-icon class="btn-search" name="scan" slot="action"/>
  </van-search>
  <van-tabs animated sticky class="bx" color="rgb(79, 192, 141)">
    <van-tab title="关注">
      <van-skeleton
        title
        row="3"
        loading="{{loading}}"
        wx:for="{{newsList}}"
        wx:key="item"
      >
        <view class="pannel" wx:if="item.title">
          <view class="pannel-header">
            <view class="pannel-title">{{item.title}}</view>
            <image wx:if="{{item.img}}" class="pannel-img" src="{{item.img}}"/>
          </view>
          <view class="pannel-footer">
            <text class="author">{{item.author}}</text>
            <text class="has-read">{{item.read}}阅读</text>
            <text class="time">{{item.time}}</text>
          </view>
        </view>
      </van-skeleton>
    </van-tab>
    <van-tab title="推荐">内容 2</van-tab>
    <van-tab title="热点">内容 3</van-tab>
    <van-tab title="扶贫">内容 4</van-tab>
    <van-tab title="政策">内容 4</van-tab>
    <van-tab title="技术">内容 4</van-tab>
  </van-tabs>
</view>
