/* pages/mine/mine.wxss */

/* 用户头像模块 */
.user-wrapper{
	width: 100%;
	padding: 30rpx 40rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.user-wrapper .left{
	display: flex;
	justify-content: flex-start;
}

.user-wrapper .user-logo{
	margin-right: 30rpx;
}

.user-wrapper .username{
	font-size: 36rpx;
	line-height: 50rpx;
	margin: 10rpx 0;
	font-weight: 500;
}

.user-wrapper .desc{
	font-size: 24rpx;
	line-height: 40rpx;
	color: #444;
}

/* 虚线 */
.divider{
	width: 100%;
	height: 6rpx;
	background-color: #f7f8fa;
}

/* 导航 */
.grid-title{
	width: 100%;
	color: #333;
	font-size: 32rpx;
	padding: 40rpx 40rpx 0;
}
.grid{
	width: 100%;
}
