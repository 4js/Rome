<!--components/list-item/list-item.wxml-->
<navigator url="/pages/article/article" class="pannel">
    <view class="pannel-header">
        <view class="pannel-title">{{newsObj.title}}</view>
        <image wx:if="{{newsObj.imgLen===1}}" class="pannel-img" src="{{newsObj.img}}"/>
    </view>
    <view class="img-wrapper" wx:if="{{newsObj.imgLen===3}}">
        <image class="img-item" src="{{newsObj.img}}"/>
        <image class="img-item" src="{{newsObj.img}}"/>
        <image class="img-item" src="{{newsObj.img}}"/>
    </view>
    <view class="pannel-footer">
        <text class="author">{{newsObj.author}}</text>
        <text class="has-read">{{newsObj.read}}阅读</text>
        <text class="time">{{newsObj.time}}</text>
    </view>
</navigator>
